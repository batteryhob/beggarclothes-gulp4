<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport"
        content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=yes" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>디자이너페이지</title>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <link rel="stylesheet" href="./css/designer/designer.css">
    <link rel="stylesheet" href="./css/sprite.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
        integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <!--iscroll-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/iScroll/5.2.0/iscroll.min.js"></script>
    <!--chartjs-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <style>       

    </style>
</head>

<body>
    
    <div id="root">
        <div id="designer">

            <header>
                <div class="alert">
                    <i class="fas fa-chevron-left left"></i>
                    <ul class="list">
                        <li>
                            subscribe beggar clothes
                        </li>
                        <li>
                            나의 지갑을 지켜줘2
                        </li>
                        <li>
                            나의 지갑을 지켜줘3
                        </li>
                    </ul>
                    <i class="fas fa-chevron-right right"></i>
                </div>
                <div class="content">
                    <div class="left mobile">
                        <button>
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>
                    <div class="logo">
                        <img class="mobile" src="/img/logo_main.png" alt="메인로고">
                        <img class="desktop" src="/img/logo_main_hor.png" alt="메인로고">
                    </div>
                    <div class="center">
                        <ul>
                            <li>
                                <div>
                                    <span>디자이너</span>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <span>추천</span>
                                </div>
                            </li>
                            <li>
                                <div>
                                    <span>세일정보</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="right">
                        <div class="btns">
                            <button>
                                <i class="fas fa-heart"></i>
                            </button>
                            <button>
                                <i class="fas fa-user"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </header>
            
            <aside class="">
                <div class="wrapper">
                    <div class="title">
                        <i class="fas fa-times"></i>
                    </div>
                    <ul class="contents">
                        <li>
                            <div>
                                <span>
                                    디자이너
                                    <i class="fas fa-chevron-right right"></i>
                                </span>
                            </div>
                        </li>
                        <li>
                            <div>
                                <span>
                                    추천
                                    <i class="fas fa-chevron-right right"></i>
                                </span>
                            </div>
                        </li>
                        <li>
                            <div>
                                <span>
                                    세일정보
                                    <i class="fas fa-chevron-right right"></i>
                                </span>
                            </div>
                        </li>
                    </ul>
                </div>
            </aside>
        
            <main> 
                <section>
                    <div class="content">
                        <div class="content-designer">
                            <div class="title">
                                <p>Designer Ranking</p>
                                <span class="line"></span>
                            </div>
                            <div class="date">
                                <i class="far fa-question-circle"></i> 2020년 09월 12일 - 2020년 09월 19일
                            </div>
                            <div class="boards iscroll-container" id="boards">
                                <div class="scroller">
                                    <ul class="communitys clearfix">
                                        <li class="community">
                                            <div class="board">
                                                <div class="name">
                                                    <p>                                                        
                                                        디젤매니아
                                                        <img class="social" src="/img/naver.png" alt="">
                                                    </p>
                                                    <span class="line"></span>
                                                </div>
                                                <ul>
                                                    <% for(var i=0;i<10;i++) { %>
                                                        <li class="keyword">
                                                            <div class="rank">
                                                                <%= i+1 %>
                                                            </div>
                                                            <div class="designer">
                                                                아크네 스튜디오
                                                            </div>                                                    
                                                        </li>
                                                    <% } %>
                                                </ul>
                                            </div>
                                        </li>
                                        <li class="community">
                                            <div class="board">
                                                <div class="name">
                                                    <p>
                                                        GoOutCasual
                                                        <img class="social" src="/img/naver.png" alt="">
                                                    </p>
                                                    <span class="line"></span>
                                                </div>
                                                <ul>
                                                    <% for(var i=0;i<10;i++) { %>
                                                        <li class="keyword">
                                                            <div class="rank">
                                                                <%= i+1 %>
                                                            </div>
                                                            <div class="designer">
                                                                오라리
                                                            </div>                                                      
                                                        </li>
                                                    <% } %>
                                                </ul>
                                            </div>
                                        </li>
                                        <li class="community">
                                            <div class="board">
                                                <div class="name">
                                                    <p>
                                                        Bonafide
                                                        <img class="social" src="/img/naver.png" alt="">
                                                    </p>                                                   
                                                    <span class="line"></span>
                                                </div>
                                                <ul>
                                                    <% for(var i=0;i<10;i++) { %>
                                                        <li class="keyword">
                                                            <div class="rank">
                                                                <%= i+1 %>
                                                            </div>
                                                            <div class="designer">
                                                                발렌시아가
                                                            </div>                                                    
                                                        </li>
                                                    <% } %>
                                                </ul>
                                            </div>
                                        </li>
                                        <li class="community">
                                            <div class="board">
                                                <div class="name">
                                                    <p>
                                                        나이키매니아
                                                        <img class="social" src="/img/naver.png" alt="">
                                                    </p>
                                                    <span class="line"></span>
                                                </div>
                                                <ul>
                                                    <% for(var i=0;i<10;i++) { %>
                                                        <li class="keyword">
                                                            <div class="rank">
                                                                <%= i+1 %>
                                                            </div>
                                                            <div class="designer">
                                                                나이키
                                                            </div>                                                    
                                                        </li>
                                                    <% } %>
                                                </ul>
                                            </div>
                                        </li>
                                        <li class="community">
                                            <div class="board">
                                                <div class="name">
                                                    <p>
                                                        어미새
                                                        <img class="social" src="/img/naver.png" alt="">
                                                    </p>
                                                    <span class="line"></span>
                                                </div>
                                                <ul>
                                                    <% for(var i=0;i<10;i++) { %>
                                                        <li class="keyword">
                                                            <div class="rank">
                                                                <%= i+1 %>
                                                            </div>
                                                            <div class="designer">
                                                                메종 마르지엘라
                                                            </div>                                                     
                                                        </li>
                                                    <% } %>
                                                </ul>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                        <div class="content-chart" >
                            <div class="top">
                                <p class="designer-tag">#AcneStudio<span>언급량 추이</span></p>
                                <p class="cafe-tag">디젤매니아<img class="social" src="/img/naver.png" alt=""></p>
                            </div>
                            <div class="bottom">
                                <canvas id="designer-chart" width="1280" height="400"></canvas>
                            </div>                            
                        </div>
                    </div>
                </section>
            </main>

            <footer>
                <div class="wrapper">
                    <div class="logo">
                        <img src="/img/logo_footer.png" alt="메인로고">
                    </div>
                    <div class="policy">
                        <ul>
                            <li>
                                <span>이용약관</span>
                            </li>
                            <li>
                                <span>개인정보취급방침</span>
                            </li>
                            <li>
                                <span>서비스소개</span>
                            </li>
                        </ul>
                    </div>
                    <div class="copy">
                        2020 Jiho Jeon. All Rights Reserved.
                    </div>
                </div>
            </footer>

        </div>
    </div>

    <script>

        (function(){

            var example_1_li_widths = $('#boards > .scroller > ul > li').outerWidth();
            var example_1_num_elements = $('#boards > .scroller > ul > li').length;
            $('#boards > .scroller').width( example_1_li_widths * example_1_num_elements );


            //iscroll
            var myScroll = new IScroll('#boards', {
                scrollX: true,
                scrollY: false,
                // momentum: false,
                snap: true,
                snapSpeed: 400,
                keyBindings: true,
                mouseWheel: true,
                disablePointer: true,
                disableTouch: false,
                disableMouse: false
            });

            //chartjs
            var ctx = document.getElementById('designer-chart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
                    datasets: [{
                        label: '# of Votes',
                        data: [12, 19, 3, 5, 2, 3],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1,
                        steppedLine: true,
                        fill: false
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
            
        })()

    </script>
</body>

</html>